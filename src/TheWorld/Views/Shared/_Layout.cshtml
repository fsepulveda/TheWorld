@{
    ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>The World @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <div id="sidebar">
        <img src="~/images/user1.png" alt="headshot" class="headshot" />
        <span id="username">Sam Hastings</span>
        <ul class="menu">
            <li class="active"><a asp-controller="App" asp-action="Index">Home</a></li>
            <li><a asp-controller="App" asp-action="About">About</a></li>
            <li><a asp-controller="App" asp-action="Contact">Contact</a></li>
        </ul>
    </div>

    <div id="wrapper">
        <div id="main">
            <div>
                <button id="sidebarToggle">Toggle Menu</button>
            </div>

            <div>
                @RenderBody()
            </div>
        </div>
        <div id="footer">
            &copy; 2016 The World S.A
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script type="text/javascript" src="~/js/site.js"></script>
</body>
</html>